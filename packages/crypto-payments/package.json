{
  "name": "@micro-cms/crypto-payments",
  "version": "1.0.21",
  "description": "Composable Crypto Payment Widget for Micro-CMS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tailwindcss -i src/index.css -o dist/index.css --minify && bash ./scripts/sync-styles.sh && tsup src/index.ts --format cjs,esm --dts --minify --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "@solana/web3.js": "^1.91.1",
    "bs58": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "@micro-cms/types": "workspace:*",
    "@micro-cms/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "tsup": "^8.0.2"
  }
}
