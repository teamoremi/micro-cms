{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Relaxed for Prototype */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@micro-cms/types": ["../../packages/types/src"],
      "@micro-cms/admin-ui": ["../../packages/admin-ui/src"],
      "@micro-cms/mock-db": ["../../packages/mock-db/src"],
      "@micro-cms/core": ["../../packages/core/src"]
    }
  },
  "include": ["src", "../../packages/*/src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}